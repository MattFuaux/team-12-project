<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- The normal state of the button -->
<item android:state_pressed="false">
    <shape android:shape="rectangle">
<!--        <solid android:color="@color/md_orange_600"/>-->
        <!--<stroke android:color="@color/md_orange_400" android:width="1dp" />-->
        <!-- make the button corners rounded-->
        <corners android:radius="10dp"/>
    </shape>
</item>

<!-- The state when the button is being pressed or clicked. -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
<!--        <solid android:color="@color/md_orange_700"/>-->
        <!--apply a border around button-->
        <!--<stroke android:color="@color/md_orange_400" android:width="1dp" />-->
        <!-- make the button corners rounded-->
        <corners android:radius="10dp"/>
    </shape>
</item>
</selector>