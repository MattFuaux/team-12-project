<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragments.search.SearchFragment">

    <TextView
        android:id="@+id/frag_search_past_search_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xl"
        android:text="Past Searches"
        android:textSize="@dimen/font_size_lg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/frag_res_take_pic_btn"
        app:layout_constraintTop_toBottomOf="@+id/frag_search_past_search_list_title">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/frag_search_past_searches_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

    <Button
        android:id="@+id/frag_res_take_pic_btn"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="@dimen/margin_3xl"
        android:layout_marginEnd="@dimen/margin_3xl"
        android:layout_marginBottom="@dimen/margin_lg"
        android:text="@string/start_new_search"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_md"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>