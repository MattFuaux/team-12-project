<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FruitWatch" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnSurface">@color/lighttextcolor</item>
        <!--        &lt;!&ndash; Secondary brand color. &ndash;&gt;-->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/lighttextcolor</item>
        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <item name="android:statusBarColor" >@color/primaryDarkColor</item>
        <!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="colorAccent">@color/accentColor</item>

        <item name="android:colorForeground">@color/lighttextcolor</item>
        <!--        <item name="textColorSecondary">@color/accentColor</item>-->

        <item name="itemTextColor">@color/lighttextcolor</item>
        <item name="itemIconTint">@color/accentColor</item>
        <item name="subheaderColor">@color/darktextcolor</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/off_black</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>

        <item name="strokeColor">@color/off_white</item>



    </style>

