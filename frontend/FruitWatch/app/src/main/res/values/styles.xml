<resources>

    <style name="ShapeAppearance.HistoryCard" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="SearchButtonLarge" parent="ButtonLargeSquare">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:text">@string/start_search</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_search_24</item>
    </style>

    <style name="SearchButton" parent="ButtonRegularSquare">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_search_24</item>
        <item name="android:text">@string/start_search</item>
    </style>

    <style name="ClearButton" parent="ButtonSmallSquare">
        <item name="backgroundTint">@color/accentDarkColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:text">@string/clear_history</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_clear_all_24</item>
    </style>

    <style name="HistoryButton" parent="ButtonRegularSquare">
        <item name="backgroundTint">@color/tertiaryColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_history_24</item>
        <item name="android:text">@string/view_past_searches</item>
    </style>

    <style name="NutritionButton" parent="ButtonRegularSquare">
        <item name="backgroundTint">@color/accentColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_outline_info_24</item>
        <item name="android:text">@string/view_nutritional_info</item>
    </style>

    <style name="CaptureButton" parent="ButtonRegularSquare">
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:text">@string/capture</item>
        <item name="android:paddingTop">@dimen/padding_lg</item>
        <item name="android:paddingBottom">@dimen/padding_lg</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableTop">@drawable/ic_camera</item>
    </style>

    <style name="GoBackButton" parent="ButtonRegularSquare">
        <item name="android:backgroundTint">@color/accentColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:text">@string/go_back</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="CloseButton" parent="ButtonLargeSquare">

        <item name="android:layout_width">0dp</item>
        <item name="backgroundTint">@color/accentDarkColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:text">@string/close</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="SignInButton" parent="ButtonLargeSquare">
        <item name="backgroundTint">@color/accentColor</item>
        <item name="android:textColor">@color/lighttextcolor</item>
        <item name="android:drawablePadding">@dimen/padding_md</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_login_24</item>
    </style>


    <style name="ButtonLargeSquare" parent="ButtonRegularSquare" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_xl</item>
        <item name="android:paddingRight">@dimen/padding_xl</item>
        <item name="android:paddingTop">@dimen/padding_lg</item>
        <item name="android:paddingBottom">@dimen/padding_lg</item>
    </style>

    <style name="ButtonRegularSquare" >
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_xl</item>
        <item name="android:paddingRight">@dimen/padding_xl</item>
        <item name="android:paddingTop">@dimen/padding_lg</item>
        <item name="android:paddingBottom">@dimen/padding_lg</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="ButtonSmallSquare" parent="ButtonRegularSquare" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_lg</item>
        <item name="android:paddingRight">@dimen/padding_lg</item>
        <item name="android:paddingTop">@dimen/padding_md</item>
        <item name="android:paddingBottom">@dimen/padding_md</item>
    </style>

</resources>